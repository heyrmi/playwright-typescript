{
  "name": "playwright-typescript",
  "description": "Playwright Framework with Typescript and playwright test runner",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:ui": "npx playwright test --ui",
    "test:debug": "npx playwright test --debug",
    "test:chrome": "npx playwright test --project=Chrome",
    "test:firefox": "npx playwright test --project=Firefox",
    "test:webkit": "npx playwright test --project=Webkit",
    "test:api": "npx playwright test tests/api --project=API",
    "test:functional": "npx playwright test tests/functional --project=Chrome",
    "test:db": "npx playwright test tests/db --project=DB",
    "test:accessibility": "npx playwright test tests/accessibility --project=Chrome",
    "test:visual": "npx playwright test tests/visualComparison --project=Chrome",
    "lighthouse": "node tests/lighthouse/lighthouse.js",
    "report": "npx playwright show-report",
    "allureReport": "allure serve",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/heyrmi/playwright-typescript"
  },
  "author": "Rahul Mishra",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/js": "^9.38.0",
    "@playwright/test": "^1.56.1",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "allure-playwright": "^3.4.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.38.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-playwright": "^2.2.2",
    "lighthouse": "^12.8.2",
    "ortoni-report": "^4.0.1",
    "playwright-lighthouse": "^4.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "exceljs": "^4.4.0",
    "pdfjs-dist-es5": "^2.13.216",
    "pg": "^8.16.3",
    "winston": "^3.18.3"
  }
